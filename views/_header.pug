header.header 
  nav.nav.nav--tours
    a.nav__el(href='/') All tours 
  .header__logo 
    img(src="/img/logo-white.png" alt="Natours logo")
  nav.nav.nav--user
    if user 
      a(href="#" class="nav__el nav__el--logout") Log Out
      a(href="/me" class="nav__el")
        img(src=`/img/users/${user.photo}` alt=`${user.name} photo` class="nav__user-img")
        span=user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/login') Sign up
